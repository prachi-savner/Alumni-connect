<%layout("/layouts/boilerplate")%>

<div class="row mt-3">
        <div class="col-8 offset-2">
            
            <h3>Create new event</h3>
            
    <form method="POST" action="/event/new" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="event[title]" placeholder="Add a title" place="text" class="form-control" required>
            <div class="valid-feedback">Looks good</div>
            <div class="invalid-feedback">Enter valid title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="event[description]" placeholder="Enter description" class="form-control"  required></textarea>
            <div class="valid-feedback">Looks good</div>
            <div class="invalid-feedback">Enter valid description</div>
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">date and time</label>
            <input name="date" placeholder="Enter date" type="datetime-local" class="form-control">
        </div>
        
        <div class="mb-3">
            <label for="place" class="form-label">place</label>
            <input name="event[place]" placeholder="event place" place="text" class="form-control" required>         
        </div>
<!--         
        <div class="mb-3">
            <label for="host" class="form-label">host</label>
            <input name="event[hostedBy]" placeholder="Hosted by"place="text" class="form-control" required>
            <div class="valid-feedback">Looks good</div>
            <div class="invalid-feedback">Enter valid host</div>
        </div>
        -->
        <button class="btn btn-dark add-btn mt-3" >Add</button>
        <br><br>
    </form>
    </div>
    </div>
