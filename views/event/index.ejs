
<% layout("/layouts/boilerplate") %>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="fw-bold mb-4 text-primary">Event & Internship Opportunities</h2>

    <% if (currUser && currUser.role === "alumni") { %>
      <form action="/event/new" method="GET" class="mb-4">
        <button class="btn btn-dark">+ Add New Event</button>
      </form>
    <% } %>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% for(event of events) { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-4 event-card">
            <div class="card-body">
              <h5 class="fw-bold text-primary mb-2 text-capitalize"><%= event.title %></h5>
<br>
            <p class="text-muted mb-1">
                <i class="fa-solid fa-building"></i> <%= event.description %>
            </p>
            <p class="text-muted mb-3">
                <i class="fa-solid fa-location-dot"></i> <%= event.date %>
            </p>
            <p class="text-muted mb-1">
                <i class="fa-solid fa-location-dot"></i> <%= event.place %>
            </p>
            <p class="text-muted mb-3">
                <i class="fa-solid fa-location-dot"></i> <%= event.host.name %>
            </p>


            </div>
            <div class="card-footer bg-white border-0">
              <a href="/event/<%= event._id %>" class="stretched-link text-decoration-none text-primary fw-semibold">View Details â†’</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
