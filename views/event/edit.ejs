<%layout("/layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h3>Edit your profile</h3>
    <form method="POST" action="/event/<%=event._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label> 
            <input name="event[title]"value="<%=event.title%>" type="text" class="form-control"required>
        </div>

        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="event[description]" type="text" class="form-control" required><%=event.description%></textarea>
        </div>

        <div class="mb-3">
            <label for="place" class="form-label">Place</label>
            <input name="event[place]" class="form-control" required value="<%=event.place%>">
        </div>
        
        <div class="mb-3 ">
            <label for="date" class="form-label">Time</label>
            <input name="event[date]" value="<%=event.date.toLocaleDateString()%>" type="text" class="form-control" required>
        </div>

        <button class="btn btn-dark edit-btn mt-3">Save Changes</button>
        <br><br>
    </form> 
        </div>
    </div>
  
