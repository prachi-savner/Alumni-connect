<%layout("/layouts/boilerplate")%>

    <!-- Hero Section -->
    <section class="hero text-center text-white d-flex align-items-center justify-content-center">
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome to Alumni Connect</h1>
            <p class="lead mt-3">Bridging the gap between alumni and students — for mentorship, networking, and growth.</p>

            <% if (!currUser) { %>
                <a href="/signup" class="btn btn-primary btn-lg mt-3">Get Started</a>
            <% } else { %>
                <a href="/alumni" class="btn btn-primary btn-lg mt-3">Explore Alumni</a>
            <% } %>
        </div>
    </section>

        <!-- About Section -->
    <section class="about py-5 bg-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <img src="https://plus.unsplash.com/premium_photo-1664297543985-a0cef55975fd?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1196" 
                         alt="About Alumni Connect" 
                         class="img-fluid rounded-4 shadow-sm"
                         style="margin-left: 10rem;">
                </div>
                <div class="col-lg-6">
                    <h2 class="fw-bold mb-3 text-primary">About Alumni Connect</h2>
                    <p class="text-muted">
                        <strong>Alumni Connect</strong> is a community-driven platform designed to bridge the gap 
                        between students and alumni. Whether you’re looking for mentorship, job opportunities, 
                        or networking with professionals who once walked the same halls, Alumni Connect brings 
                        everyone together under one digital roof.
                    </p>
                    <p class="text-muted">
                        Our mission is to <strong>empower students</strong> through alumni guidance, foster 
                        <strong>lifelong relationships</strong>, and build a network that grows stronger with 
                        every graduating batch.
                    </p>
                    <!-- <a href="/about" class="btn btn-primary mt-3 px-4">Learn More</a> -->
                </div>
            </div>
        </div>
    </section>


    <!-- Features -->
    <section class="container my-5">
        <h2 class="text-center fw-bold mb-4">Connect. Inspire. Grow.</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <i class="fa-solid fa-users fa-3x text-primary mb-3"></i>
                    <h5>Networking</h5>
                    <p>Connect with alumni from various industries and expand your professional network.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <i class="fa-solid fa-briefcase fa-3x text-primary mb-3"></i>
                    <h5>Opportunities</h5>
                    <p>Discover internships, jobs, and mentorship programs posted by our alumni community.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <i class="fa-solid fa-calendar-days fa-3x text-primary mb-3"></i>
                    <h5>Events</h5>
                    <p>Stay updated with upcoming alumni meets, webinars, and networking events.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer py-3 mt-5 text-center text-white">
        <p>© <%= new Date().getFullYear() %> Alumni Connect | Built with ❤️ for our community</p>
    </footer>

