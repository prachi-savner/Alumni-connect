<%layout("/layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your profile</h3>
    <form method="POST" action="/admin/<%=admin._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">name</label> 
            <input name="admin[name]"value="<%=admin.name%>" type="text" class="form-control"required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">email</label> 
            <input name="admin[email]"value="<%=admin.email%>" type="text" class="form-control"required>
        </div>
        
        <div class="mb-3">
            <label for="profilePic" class="form-label">Image Link</label>
            <input name="admin[profilePic][url]"  value="<%=admin.profilePic.url%>"  type="file" class="form-control" >
        </div>
        
        <button class="btn btn-dark edit-btn mt-3">Save Changes</button>
        <br><br>
    </form> 
        </div>
    </div>
  
