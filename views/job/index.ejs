<% layout("/layouts/boilerplate") %>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="fw-bold mb-4 text-primary">Job & Internship Opportunities</h2>

    <% if (currUser && currUser.role !== "student") { %>
      <form action="/job/new" method="GET" class="mb-4">
        <button class="btn btn-dark">+ Add New Job</button>
      </form>
    <% } %>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% for(job of jobs) { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-4 job-card">
            <div class="card-body">
              <h5 class="fw-bold text-dark mb-2 text-capitalize"><%= job.title %></h5>

<p class="text-muted mb-1">
  <i class="fa-solid fa-building"></i> <%= job.company %>
</p>
<p class="text-muted mb-1">
  <i class="fa-solid fa-briefcase"></i> <%= job.type %>
</p>
<p class="text-muted mb-3">
  <i class="fa-solid fa-location-dot"></i> <%= job.location %>
</p>


            </div>
            <div class="card-footer bg-white border-0">
              <a href="/job/<%= job._id %>" class="stretched-link text-decoration-none text-primary fw-semibold">View Details â†’</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
